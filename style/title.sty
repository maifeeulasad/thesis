\newcommand\@supervisor{%
  Your Supervisor(s)%
  \@latex@warning@no@line{No \noexpand\supervisor specified!}
}
% Command
\newcommand{\supervisor}[2][1]{%
  \gdef\@supervisor{#2}%
  \ifnumless{#1}{1}{% true
    \nosupervisortrue
    \multiplesupervisorsfalse
  }
  {}% false
  \ifnumequal{#1}{1}{% true
    \nosupervisorfalse 
    \multiplesupervisorsfalse
  }
  {}% false
  \ifnumgreater{#1}{1}{% true
    \nosupervisorfalse 
    \multiplesupervisorstrue
  }%
  {}% false
}

